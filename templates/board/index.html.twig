{% extends 'base.html.twig' %}

{% block title %}Hello BoardController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Bienvenue sur le trello like ✅</h1>

		{% if is_granted('ROLE_USER') %}

			<a href=" {{ path('app_logout') }} ">Se déconnecter</a>
			<a href=" {{ path('app_task_new') }} ">Ajouter une tâche</a>

			{# ici afficher tout les tickets #}
			<h1>Tâches en cours:</h1>

			{# {{ app.user.email }} #}

			{% for task in task %}
				<table>

					<tr>
						<th>Id</th>
						<th>Titre</th>
						<th>Contenu</th>
						<th>Date</th>
					</tr>

					<tr>
						<td>{{ task.id }}|| </td>
						<td>{{ task.title }}|| </td>
						<td>{{ task.content }}|| </td>
						<td>{{ task.createdAt|date("d/m/Y") }} </td>
					</tr>

				</table>

			{% endfor %}


		{% else %}

			<a href=" {{ path('app_register') }} ">S'inscrire</a>
			<a href=" {{ path('app_login') }} ">Se connecter</a>

		{% endif %}


	</div>
{% endblock %}
